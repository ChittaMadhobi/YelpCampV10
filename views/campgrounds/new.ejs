<!-- This is new.ejs for the campgrounds domain or context. -->
<% include ../partials/header %>

    <div class="container">
        <div class="row">
            <h1 style="text-align: center">Create a New Campground</h1>
            <div style="width: 40%; margin: 30px auto;">
                <form action='/campgrounds' method='POST'>
                    <div class="form-group">
                        <input class="form-control" type="text" placeholder="camp name" name="campName">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" placeholder="image url" name="campImage">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" placeholder="Describe Campground" name="campDescribe">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit</button>    
                    </div>
                </form>
                <a href="/campgrounds">Go back to campgrounds</a>
            </div>
        </div>
    </div>
<% include  ../partials/footer%>