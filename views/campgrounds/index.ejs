<% include ../partials/header %>

    <!--We will put everything in a bootstrap container -->
    <div class="container">
        <header class="jumbotron">
            <!-- To make jumbotron responsive, let's put it in a container -->
            <div class="container">
                <h1>Welcome to Baanda Camp</h1>
                <p>View our hand-picked campgrounds from around the world</p>
                <p>
                    <a class="btn btn-primary btn-lg" href='/campgrounds/new'>Add a New Campground</a>
                </p>
            </div>
        </header>

        <!--div class="row">
            <div class="col-lg-12">
                <h3 style='text-align: center;'>Our most popular campgrounds!</h3>
            </div>
        </div -->

        <div class="row text-center" style="display:flex; flex-wrap: wrap;">
            <% campVar.forEach(function(camps){ %>
                <div class="col-md-3 col-sm-6">
                    <div class="thumbnail">
                        <img src='<%= camps.image%>'>
                        <div class="caption">
                                <h4><%= camps.name %></h4>
                        </div>
                        <p>
                            <a href="/campgrounds/ <%= camps._id %>" class="btn btn-primary">More Info</a>
                        </p>
                    </div>
                </div>
            <% });  %>
        </div>


    </div>
    <% include ../partials/footer %>